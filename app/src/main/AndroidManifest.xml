<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MainApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DeleteMeActivity"
            android:exported="false"
            android:label="@string/title_activity_delete_me"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ComposeStartActivity"
            android:exported="true"
            android:label="@string/title_activity_compose_start"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- GENERATOR - MORE ACTIVITIES -->
        <activity-alias
            android:name=".Launcher"
            android:targetActivity=".ComposeStartActivity" />
    </application>

</manifest>